    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/uuid": "^10.0.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/compression": "^1.7.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.4",
