    "dotenv": "^16.5.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.76",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.4",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.5",
    "express-validator": "^7.2.0",
    "axios": "^1.10.0"
