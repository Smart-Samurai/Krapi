{
  "name": "krapi-backend",
  "version": "0.0.1",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start": "node start.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "npm rebuild better-sqlite3 || true"
  },
  "keywords": [
    "api",
    "backend",
    "database",
    "krapi"
  ],
  "author": "KRAPI Team",
  "license": "MIT",
  "description": "KRAPI - Project-driven API backend with session-based authentication",
  "dependencies": {
    "@krapi/error-handler": "file:../packages/krapi-error-handler",
    "@krapi/logger": "file:../packages/krapi-logger",
    "@krapi/monitor": "file:../packages/krapi-monitor",
    "@smartsamurai/krapi-sdk": "latest",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/compression": "^1.7.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.17.2",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.8.3"
  },
  "tsc-alias": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "dist/*"
      ],
      "@controllers/*": [
        "dist/controllers/*"
      ],
      "@services/*": [
        "dist/services/*"
      ],
      "@routes/*": [
        "dist/routes/*"
      ],
      "@middleware/*": [
        "dist/middleware/*"
      ],
      "@types/*": [
        "dist/types/*"
      ]
    }
  }
}
