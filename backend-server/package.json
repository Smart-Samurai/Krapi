{
  "name": "krapi-backend",
  "version": "2.0.0",
  "packageManager": "pnpm@9.0.0",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "type-check": "tsc --noEmit",
