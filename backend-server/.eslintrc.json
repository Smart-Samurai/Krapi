{
  "ignorePatterns": ["start.js", "dist/**", "node_modules/**"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "import"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {    // Import/module resolution rules
    "import/no-unresolved": "error",
    "import/no-cycle": "warn",
    "import/no-unused-modules": "off", // Disable this as it's often too strict
    "import/order": "off", // Disable import order warnings for now
    "import/no-named-as-default-member": "off", // Disable this for common libraries like nodemailer    // TypeScript specific rules
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],    "@typescript-eslint/no-explicit-any": "off", // Allow any type for flexibility
    "@typescript-eslint/no-empty-object-type": "off", // Allow empty interfaces for component props
    "@typescript-eslint/no-unused-expressions": "warn",
    "prefer-const": "warn",
    "@typescript-eslint/no-inferrable-types": "off", // Allow explicit types for clarity
    "react-hooks/exhaustive-deps": "warn", // Keep React hooks dependency checking
    "import/no-duplicates": "off", // Disable duplicate import warnings
    "import/no-named-as-default": "off", // Disable for libraries like parsePhoneNumberFromString

    // Disable conflicting rules from base configs
    "no-unused-vars": "off",

    // Next.js specific adjustments
    "@typescript-eslint/no-var-requires": "off"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ]
}
