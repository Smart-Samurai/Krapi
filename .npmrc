# Allow build scripts for necessary packages
public-hoist-pattern[]=*
shamefully-hoist=true
auto-install-peers=true
strict-peer-dependencies=false

# Allow build scripts for specific packages
enable-pre-post-scripts=true
ignore-build-errors=false

# Package-specific build script approvals
@tailwindcss/oxide:build-script=true
esbuild:build-script=true
sharp:build-script=true
unrs-resolver:build-script=true
