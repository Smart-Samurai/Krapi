# npm-compatible configuration
# This file is compatible with both npm and pnpm
# pnpm-specific settings are in .npmrc.pnpm (automatically merged by pnpm)

# Allow build scripts for necessary packages (npm compatible)
strict-peer-dependencies=false

# Package-specific build script approvals (npm compatible)
@tailwindcss/oxide:build-script=true
better-sqlite3:build-script=true
esbuild:build-script=true
sharp:build-script=true
unrs-resolver:build-script=true
