# API Server Environment Configuration
# Copy this file to .env and modify as needed

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration
DB_PATH=./data/app.db

# Server Configuration
PORT=3470
NODE_ENV=development

# Default Admin User (will be created if no users exist)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# CORS Configuration - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3469,http://localhost:3000

# Ollama Configuration (optional - for AI features)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30000

# MCP Configuration (Model Context Protocol)
MCP_ENABLED=true
MCP_PORT=3456
MCP_TOOLS_ENABLED=true
MCP_MAX_CONTEXT_LENGTH=4096
MCP_DEBUG=true

# Email Configuration (optional - for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=your-email@gmail.com