# Server Configuration
NODE_ENV=development
PORT=3470
HOST=localhost

# Database Configuration
DATABASE_PATH=./data/krapi.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_EXPIRES_IN=1h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3469,http://localhost:3000,http://localhost

# File Upload Configuration
UPLOAD_PATH=./data/uploads
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Default - can be overridden per project)
DEFAULT_SMTP_HOST=smtp.gmail.com
DEFAULT_SMTP_PORT=587
DEFAULT_SMTP_SECURE=false
DEFAULT_SMTP_USER=
DEFAULT_SMTP_PASS=
DEFAULT_EMAIL_FROM=noreply@krapi.local

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@krapi.local
DEFAULT_ADMIN_PASSWORD=admin123

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined