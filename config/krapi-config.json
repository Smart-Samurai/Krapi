      "enabled": false,
      "windowMs": 900000,
      "loginMax": 999999,
      "sensitiveMax": 999999,
      "generalMax": 999999
    }
  },
  "database": {
    "path": "./data/krapi.db",
    "projectsDir": "./data/projects"
  }
