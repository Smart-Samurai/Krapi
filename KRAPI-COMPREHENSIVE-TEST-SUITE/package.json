{
  "name": "krapi-comprehensive-test-suite",
  "version": "0.0.1",
  "description": "Comprehensive test suite for KRAPI Backend-as-a-Service",
  "main": "comprehensive-unified-test.js",
  "type": "module",
  "scripts": {
    "test": "node comprehensive-test-runner.js",
    "test:quick": "node comprehensive-test-runner.js --stop-on-first-failure",
    "test:only": "node comprehensive-test-runner.js --only",
    "test:failing": "node comprehensive-test-runner.js --only-failing",
    "test:help": "node comprehensive-test-runner.js --help",
    "test:ui": "node frontend-ui-test-runner.js",
    "test:ui:headed": "HEADLESS=false node frontend-ui-test-runner.js",
    "test:ui:verbose": "VERBOSE=true node frontend-ui-test-runner.js"
  },
  "dependencies": {
    "@smartsamurai/krapi-sdk": "^0.5.18",
    "axios": "^1.13.2",
    "chalk": "^5.3.0",
    "form-data": "^4.0.5",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "krapi",
    "testing",
    "api",
    "backend-as-a-service"
  ],
  "author": "KRAPI Team",
  "license": "MIT"
}
